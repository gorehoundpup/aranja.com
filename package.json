{
  "name": "aranja-tux-site",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^15.5.2",
    "react-chain": "^0.3.0",
    "react-chain-history": "^0.3.0",
    "react-document": "^0.5.0",
    "react-dom": "^15.5.2",
    "react-motion": "^0.5.0",
    "tux": "0.1.4",
    "tux-adapter-contentful": "0.1.4"
  },
  "devDependencies": {
    "node-sass-chokidar": "0.0.1",
    "npm-run-all": "^4.0.2",
    "tux-scripts": "0.1.4"
  },
  "scripts": {
    "start-js": "tux-scripts start",
    "start": "npm-run-all -p watch-css start-js",
    "build": "npm run build-css && tux-scripts build",
    "serve": "tux-scripts serve",
    "build-css": "node-sass-chokidar src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar src/ -o src/ --watch --recursive"
  }
}
